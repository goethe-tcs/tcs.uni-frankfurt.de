{
  "name": "tcs.uni-frankfurt.de",
  "version": "0.7.0",
  "packageManager": "yarn@1.22.19",
  "repository": "git@github.com/goethe-tcs/tcs.uni-frankfurt.de",
  "author": "Holger Dell",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "serve": "mkdir -p static/webfonts && cp ./node_modules/@fortawesome/fontawesome-free/webfonts/* static/webfonts/ && mkdir -p static/fonts && cp node_modules/academicons/fonts/* static/fonts/ && echo Serving on http://localhost:1313/ && GIT_CONFIG_NOSYSTEM=true hugo server",
    "clean": "bash -c 'rm -rf static/assets/dist/*' resources/_gen public/",
    "build": "mkdir -p static/webfonts && cp ./node_modules/@fortawesome/fontawesome-free/webfonts/* static/webfonts/ && mkdir -p static/fonts && cp node_modules/academicons/fonts/* static/fonts/ && GIT_CONFIG_NOSYSTEM=true hugo --gc --minify",
    "upload": "rsync --update -lrvz --progress --delete public/ tcs.uni-frankfurt.de:/var/www/html/tcs.uni-frankfurt.de/"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.3.0",
    "academicons": "^1.9.2",
    "katex": "^0.16.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "postcss-html": "^0.36.0",
    "postcss-import": "^15.1.0",
    "postcss-scss": "^4.0.4",
    "postcss-simple-vars": "^7.0.1",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.8.4",
    "prettier-plugin-css-order": "^1.3.0",
    "prettier-plugin-go-template": "^0.0.13",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "standard": "^14.3.4",
    "stylelint": "^14.9.1",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "tailwindcss": "^3.2.4"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ]
  }
}
